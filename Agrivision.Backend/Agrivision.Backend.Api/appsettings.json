{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../agrivision/log-.json",
          "rollingInterval": "Day",
          "outputTemplate": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithProcessId"],
    "Properties": {
      "ApplicationName": "Agrivision"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Issuer": "AgrivisionLabs",
    "Audience": "AgrivisionUsers",
    "ExpiryMinutes": 30
  },
  "MailSettings": {
    "SmtpServer": "smtp.gmail.com",
    "Port": 587,
    "SenderEmail": "agrivision.labs@gmail.com",
    "SenderName": "Agrivision Labs",
    "UserName": "agrivision.labs@gmail.com",
    "Password": "",
    "EnableSSL": true
  }
}
